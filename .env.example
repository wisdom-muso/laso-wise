# =============================================================================
# Laso Healthcare Docker Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# cp .env.example .env

# =============================================================================
# Django Settings
# =============================================================================
DEBUG=False
SECRET_KEY=your-very-long-random-secret-key-here-min-50-characters-long
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# =============================================================================
# Database Configuration (PostgreSQL)
# =============================================================================
POSTGRES_DB=laso_healthcare
POSTGRES_USER=laso_user
POSTGRES_PASSWORD=your-secure-database-password-here

# Alternative: Full database URL (overrides individual settings above)
# DATABASE_URL=postgresql://laso_user:password@db:5432/laso_healthcare

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_PASSWORD=your-secure-redis-password-here
# REDIS_URL=redis://:your-secure-redis-password-here@redis:6379/0

# =============================================================================
# Email Configuration (SMTP)
# =============================================================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-app-password

# Alternative email backends for development/testing
# EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# EMAIL_BACKEND=django.core.mail.backends.filebased.EmailBackend
# EMAIL_FILE_PATH=/app/logs/emails

# =============================================================================
# AI Services (Optional but recommended)
# =============================================================================
# OpenAI API for advanced AI features
OPENAI_API_KEY=your-openai-api-key-here

# Hugging Face API for ML models
HUGGINGFACE_API_KEY=your-huggingface-api-key-here

# =============================================================================
# Security & Authentication
# =============================================================================
# Session security
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_SSL_REDIRECT=False

# CORS settings for frontend/mobile apps
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend-domain.com
CORS_ALLOW_CREDENTIALS=True

# =============================================================================
# File Storage & Media
# =============================================================================
# AWS S3 Configuration (optional, for production file storage)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=your-s3-bucket-name
# AWS_S3_REGION_NAME=us-east-1
# USE_S3_STORAGE=False

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# =============================================================================
# Application Features
# =============================================================================
# AI Features Toggle
ENABLE_AI_FEATURES=True
SYMPTOM_ANALYSIS_ENABLED=True
DRUG_INTERACTION_CHECK=True
HEALTH_RISK_ASSESSMENT=True

# Telemedicine Settings
MAX_SESSION_DURATION=120  # minutes
RECORDING_ENABLED=True
AUTO_END_SESSION_AFTER=150  # minutes

# Notification Settings
ENABLE_EMAIL_NOTIFICATIONS=True
ENABLE_SMS_NOTIFICATIONS=False
NOTIFICATION_BATCH_SIZE=100

# =============================================================================
# Performance & Scaling
# =============================================================================
# Database connection pooling
DB_CONN_MAX_AGE=300
DB_CONN_POOL_SIZE=20

# Cache settings
CACHE_TIMEOUT=3600  # 1 hour
SESSION_CACHE_ALIAS=default

# File upload limits
FILE_UPLOAD_MAX_MEMORY_SIZE=10485760  # 10MB
DATA_UPLOAD_MAX_MEMORY_SIZE=10485760  # 10MB

# =============================================================================
# Monitoring & Health Checks
# =============================================================================
# Enable health check endpoint
ENABLE_HEALTH_CHECKS=True

# Sentry for error tracking (optional)
# SENTRY_DSN=your-sentry-dsn-here
# SENTRY_ENVIRONMENT=production

# =============================================================================
# Backup & Maintenance
# =============================================================================
# Automatic database backup
ENABLE_AUTO_BACKUP=True
BACKUP_RETENTION_DAYS=30

# Maintenance mode
MAINTENANCE_MODE=False
MAINTENANCE_MESSAGE=System is under maintenance. Please try again later.

# =============================================================================
# Development & Testing (Docker development override)
# =============================================================================
# Uncomment for development environment
# DEBUG=True
# ALLOWED_HOSTS=*
# EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# ENABLE_AI_FEATURES=False
