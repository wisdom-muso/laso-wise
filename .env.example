# =============================================================================
# Laso Healthcare Environment Configuration
# =============================================================================
# Copy this file to .env and update with your actual values:
# cp .env.example .env

# =============================================================================
# Django Settings
# =============================================================================
DEBUG=False
SECRET_KEY=your-very-long-random-secret-key-here-min-50-characters-long
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# =============================================================================
# Database Configuration (PostgreSQL)
# =============================================================================
POSTGRES_DB=laso_healthcare
POSTGRES_USER=laso_user
POSTGRES_PASSWORD=your-secure-database-password-here

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_PASSWORD=your-secure-redis-password-here

# =============================================================================
# Email Configuration
# =============================================================================
# For development (console output)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# For production (SMTP)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-email-app-password

# =============================================================================
# AI Services (Optional)
# =============================================================================
OPENAI_API_KEY=your-openai-api-key-here
HUGGINGFACE_API_KEY=your-huggingface-api-key-here

# =============================================================================
# Application Settings
# =============================================================================
USE_SQLITE=False
LOG_TO_FILE=False

# =============================================================================
# Development Settings (uncomment for development)
# =============================================================================
# DEBUG=True
# ALLOWED_HOSTS=*
# ENABLE_AI_FEATURES=False
