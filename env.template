# =============================================================================
# LASO Digital Health - Environment Configuration Template
# =============================================================================
# Copy this file to .env.prod for production or .env.dev for development
# and update the values according to your environment

# =============================================================================
# CORE DJANGO SETTINGS
# =============================================================================
DEBUG=False
SECRET_KEY=your-very-secure-secret-key-here-change-this-in-production

# =============================================================================
# HOST AND DOMAIN SETTINGS
# =============================================================================
DOMAIN=your-domain.com
ALLOWED_HOSTS=your-domain.com,www.your-domain.com,localhost,127.0.0.1
CSRF_TRUSTED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Cookie Security (set to True in production with HTTPS)
CSRF_COOKIE_SECURE=True
SESSION_COOKIE_SECURE=True

# =============================================================================
# SSL/HTTPS CONFIGURATION
# =============================================================================
SSL_ENABLED=true
HTTP_PORT=80
HTTPS_PORT=443

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# For SQLite (default)
# DATABASE_URL=sqlite:///home/appuser/app/db.sqlite3

# For PostgreSQL (recommended for production)
# DATABASE_URL=postgresql://username:password@db:5432/database_name
# POSTGRES_DB=laso_db
# POSTGRES_USER=laso_user
# POSTGRES_PASSWORD=secure_database_password

# =============================================================================
# REDIS CONFIGURATION (optional)
# =============================================================================
# REDIS_URL=redis://redis:6379/0
# REDIS_PASSWORD=secure_redis_password

# =============================================================================
# GUNICORN CONFIGURATION
# =============================================================================
GUNICORN_WORKERS=3
GUNICORN_WORKER_CLASS=sync
GUNICORN_TIMEOUT=120
GUNICORN_KEEPALIVE=2
GUNICORN_MAX_REQUESTS=1000
GUNICORN_MAX_REQUESTS_JITTER=50
GUNICORN_LOG_LEVEL=info

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# =============================================================================
# SUPERUSER CONFIGURATION (optional - for automatic creation)
# =============================================================================
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@your-domain.com
DJANGO_SUPERUSER_PASSWORD=secure_admin_password

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
LOAD_FIXTURES=false

# =============================================================================
# MONITORING AND LOGGING (optional)
# =============================================================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=secure_grafana_password

# =============================================================================
# DOCKER BUILD CONFIGURATION
# =============================================================================
BUILD_DATE=
VCS_REF=
VERSION=latest

# =============================================================================
# BACKUP CONFIGURATION (for backup scripts)
# =============================================================================
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_ACCESS_KEY=your-s3-access-key
BACKUP_S3_SECRET_KEY=your-s3-secret-key 